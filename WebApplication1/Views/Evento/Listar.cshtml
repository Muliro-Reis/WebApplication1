@model IEnumerable<WebApplication1.Models.Evento>

@{
    ViewBag.Title = "Listar";
}

<h2>Lista de Eventos</h2>

<p>
    @Html.ActionLink("➕Cadastrar", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Local)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.ActionLink("🖊Alterar", "Edit", new { id = Model.ToList<WebApplication1.Models.Evento>().IndexOf(item) }, new { @class = "btn btn-primary" })
                @Html.ActionLink("👁Visualizar", "Exibir", new { id = Model.ToList<WebApplication1.Models.Evento>().IndexOf(item) }, new { @class = "btn btn-secondary" })
                @Html.ActionLink("🗑Excluir", "Delete", new { id = Model.ToList<WebApplication1.Models.Evento>().IndexOf(item) }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
